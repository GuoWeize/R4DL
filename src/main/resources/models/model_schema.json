{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "identifier": {
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        },
        "property-name":{
            "type": "string",
            "pattern": "(^[A-Za-z_][A-Za-z0-9_]*$)|[?#:]"
        },
        "any-type": {
            "anyOf": [
                { "$ref": "#/definitions/identifier" },
                { "$ref": "#/definitions/basic-type" },
                { "$ref": "#/definitions/array-type" },
                { "$ref": "#/definitions/set-type" },
                { "$ref": "#/definitions/map-type" }
            ]
        },
        "basic-type": {
            "type": "object",
            "properties": {
                "boolean": { "type": "boolean" },
                "integer": { "type": "integer" },
                "float": { "type": "number" },
                "string": { "type": "string" }
            },
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": false
        },
        "array-type": {
            "type": "object",
            "properties": {
                "[]": { "$ref": "#/definitions/any-type" }
            },
            "required": [ "[]" ],
            "additionalProperties": false
        },
        "set-type": {
            "type": "object",
            "properties": {
                "()": { "$ref": "#/definitions/any-type" }
            },
            "required": [ "()" ],
            "additionalProperties": false
        },
        "map-type": {
            "type": "object",
            "properties": {
                "K": { "$ref": "#/definitions/any-type" },
                "V": { "$ref": "#/definitions/any-type" }
            },
            "required": [ "K", "V" ],
            "additionalProperties": false
        },
        "user-defined": {
            "type": "object",
            "properties": {
                "?": { "type": "boolean" },
                ":": { "type": "string" },
                "#": { "$ref": "#/definitions/identifier" }
            },
            "required": [ "?", "#" ],
            "propertyNames": { "$ref": "#/definitions/property-name" },
            "additionalProperties": { "$ref": "#/definitions/any-type" }
        }
    },
    "type": "object",
    "maxProperties": 1,
    "minProperties": 1,
    "properties": {
        "": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/user-defined"
            }
        }
    }
}